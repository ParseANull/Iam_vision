# IBM Security Verify API Configuration
# Copy this file to .env and fill in your credentials

# Your IBM Security Verify tenant URL (e.g., https://your-tenant.verify.ibm.com)
IBM_VERIFY_TENANT_URL=

# OAuth 2.0 Client Credentials
IBM_VERIFY_CLIENT_ID=
IBM_VERIFY_CLIENT_SECRET=

# API Version (default: v2.0)
IBM_VERIFY_API_VERSION=v2.0

# Request Configuration
REQUEST_TIMEOUT=30
MAX_RETRIES=3
RETRY_BACKOFF=2.0

# Pagination
DEFAULT_PAGE_SIZE=100

# Output Directory
OUTPUT_DIR=data
